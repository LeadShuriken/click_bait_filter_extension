{
  "manifest_version": 2,
  "name": "ClickBait Filtering Plugin",
  "short_name": "ClickBait Filter",
  "version": "0.1",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webRequest",
    "notifications",
    "storage",
    "tabs"
  ],
  "commands": {
    "switch_toggler": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "windows": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Switches link registering on and off",
      "global": true
    },
    "switch_topology": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "windows": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Displays and hides page topology",
      "global": true
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "Icon-16.png",
    "48": "Icon-48.png",
    "128": "Icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "Icon-16.png",
      "48": "Icon-48.png",
      "128": "Icon-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "ClickBait Filter"
  },
  "web_accessible_resources": [
    "clickbait.png",
    "Icon-128.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}